<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputTxt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:hint="Ingrese texto"
        android:paddingLeft="10dp"
        android:textColorHint="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="91dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:src="@mipmap/spain" />

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="121dp"
            android:layout_height="105dp"
            android:background="@drawable/izquierda"
            android:checked="false"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="91dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:src="@mipmap/whiphala" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traducir"
        android:id="@+id/btnTraducir" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        android:textColorHint="@android:color/white"
        android:hint="Texto traducido"
        android:textColor="@android:color/black"
        android:id="@+id/TxtTraducido"/>



</LinearLayout>